<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> سایت ایران بورس </title>
    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <script src="/Content/js/jquery.min.js"></script>
</head>
<body>
    <script src="/Content/js/modernizr.js"></script>

    <!-- Top Menu -->
    <div class="top-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-5">
                    <ul>
                        <li><a href="/"><i class="fa fa-home"></i></a></li>
                        <li><a href=""><i class="fa fa-question-circle"></i></a></li>
                        <li><a href=""><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-7">
                    <span>امروز : @DateTime.Now.ToShamsi()</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <!-- header -->
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <a href="" class="logo"><img src="/Content/img/logo.png" alt="" title=""></a>
                    <div class="left-side">
                        <h1><a href="">سایت ایران بورس</a></h1>
                        <h2> پایگاه تحلیلی و خبری</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form action="/Search" method="get" class="border-radius">
                        <input class="border-radius" type="text" name="q" placeholder=" جستجو کنید ... ">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- menu -->
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li><a href="/Archive"> آرشیو اطلاعات    </a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href=""> @User.Identity.Name خوش آمدید . </a></li>
                    <li><a href="/Account/SignOut"> خروج </a></li>
                }
                else
                {
                    <li><a href="/Account/Login"> ورود به سایت </a></li>
                }
                <li>
                    @Html.Action("ShowGroupsInMenu", "News")
                </li>
            </ul>
        </div>
    </nav>
    <!-- End menu -->

    <div class="container margin-top-30">
        <div class="row">

            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">

                @if (User.Identity.IsAuthenticated)
                {
                    <section class="category-section border-radius">
                        <header><i class="fa fa-folder-open-o"></i> <h3> دسته بندی ها </h3></header>
                        <ul>
                            <li>
                                <a href="/Admin/PageGroups">مدریت گروه ها</a>
                            </li>
                            <li>
                                <a href="/Admin/Pages">مدریت صفحات </a>
                            </li>
                        </ul>
                    </section>


                }


                @Html.Action("ShowGroups", "News")
                <!-- most views news -->
                @Html.Action("TopNews", "News")
                <!-- end most views news -->
            </aside>


            <div class="col-md-8 col-sm-12 col-xs-12 ">
                @RenderBody()
            </div>


        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <section class="access-links">
                            @Html.Action("ShowGroupsInFooter", "News");
                    </section>
                </div>
                <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="socials">
                        <span> شبکه های اجتماعی  سایت</span>
                        <a href=""><i class="fa fa-facebook"></i></a>
                        <a href=""><i class="fa fa-twitter"></i></a>
                        <a href=""><i class="fa fa-paper-plane"></i></a>
                        <a href=""><i class="fa fa-instagram" style="font-size:29px"></i></a>
                        <div class="clearfix"></div>
                    </div>
                    <p>
                        تمامی حقوق مادی و معنوی این سایت متعلق به  ایران بورس  می باشد و کپی برداری از این سایت غیر اخلاقی می باشد.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/script.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
